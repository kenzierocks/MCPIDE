<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TitledPane fx:id="root" collapsible="false" styleClass="root" stylesheets="@darktheme.css" text="Find in Path" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="me.kenzierocks.mcpide.controller.FindInPathController">
    <content>
        <VBox prefHeight="450.0" spacing="10.0">
            <TextField fx:id="textField" onAction="#startSearch" prefColumnCount="50" promptText="Find..." VBox.vgrow="NEVER" />
            <HBox alignment="CENTER" spacing="5.0" VBox.vgrow="NEVER">
                <children>
                    <Label styleClass="dark-label" text="From:" />
                    <RadioButton fx:id="sourceFromProject" contentDisplay="TEXT_ONLY" mnemonicParsing="false" text="Whole Project">
                        <toggleGroup>
                            <ToggleGroup fx:id="source" />
                        </toggleGroup>
                    </RadioButton>
                    <RadioButton fx:id="sourceFromDir" contentDisplay="TEXT_ONLY" mnemonicParsing="false" selected="true" text="Directory:" toggleGroup="$source" />
                    <TextField fx:id="sourceDirectory" promptText="Directory..." HBox.hgrow="ALWAYS" />
                </children>
            </HBox>
            <ListView fx:id="items" VBox.vgrow="ALWAYS">
                <VBox.margin>
                    <Insets />
                </VBox.margin>
            </ListView>
        </VBox>
    </content>
</TitledPane>
